// examples/hello_3d.jp — 最小の 3D サンプル
// 回転するカラフルなキューブを表示する

プラグイン読込("engine_3d")

3Dウィンドウ作成("Hello 3D", 800, 600)
3Dカメラ設定(0, 3, 8,   0, 0, 0)
3D環境光設定(0.2, 0.2, 0.2)
3D平行光設定(0.5, -1.0, 0.3,   1.0, 1.0, 0.9)

箱 = 3Dキューブ作成(1.5, 1.5, 1.5)
3Dメッシュ色設定(箱, 0.2, 0.6, 1.0, 1.0)

角度 = 0.0

ループ {
  もし(3D更新() == 偽) { 抜ける }
  もし(3Dキー押下中("エスケープ")) { 抜ける }

  角度 = 角度 + 60 * 3Dデルタ時間()

  3D描画開始(0.05, 0.05, 0.1)
    3Dメッシュ描画(箱, 0, 0, 0,   0, 角度, 0,   1, 1, 1)
  3D描画終了()
}

3Dウィンドウ削除()
